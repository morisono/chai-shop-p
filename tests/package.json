{
  "name": "tests",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:unit": "vitest --config unit/vitest.config.mts",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "test:integration": "pactum run --config integration/pactum.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:coverage:clean": "rm -rf coverage .vitest-cache",
    "test:coverage:fresh": "npm run test:coverage:clean && npm run test:coverage",
    "test:watch": "vitest",
    "all": "npm-run-all --serial test:unit test:integration test:e2e"
  },
  "devDependencies": {
    "@percy/cli": "^1.31.1",
    "@percy/playwright": "^1.0.9",
    "@playwright/test": "^1.53.2",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "pactum": "^2.0.0",
    "vitest": "^3.2.4"
  }
}
