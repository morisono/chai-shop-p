{
  "name": "tests",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test:unit": "vitest --config unit/vitest.config.mts",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "test:integration": "pactum run --config integration/pactum.config.ts",
    "test": "npm-run-all --serial test:unit test:integration test:e2e"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "vitest": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "@playwright/test": "^1.53.2",
    "pactum": "^2.0.0"
  }
}
