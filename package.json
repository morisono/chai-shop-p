{
  "name": "vite-saas-boilerplate",
  "version": "0.1.0",
  "private": true,
  "description": "A Vite.js boilerplate for SaaS applications",
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "tests",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/frontend",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=apps/frontend",
    "build:server": "npm run build --workspace=apps/backend",
    "build:drizzle": "npm run build --workspace=packages/drizzle",
    "build:zod": "npm run build --workspace=packages/zod",
    "start": "npm run start --workspace=apps/frontend",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest --config tests/unit/vitest.config.mts",
    "test:e2ee": "npm run test --workspace=tests/e2e",
    "test:e2e": "playwright test --config tests/e2e/playwright.config.ts",
    "drizzle:generate": "npm run generate --workspace=db",
    "drizzle:migrate": "npm run migrate --workspace=db",
    "drizzle:studio": "npm run studio --workspace=db",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'package-lock.json' -type f -delete && find . -name 'yarn.lock' -type f -delete && find . -name 'dist' -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "wait-port": "^1.1.0",
    "pnpm": "^10.8.1"
  }
}
